{% extends 'layout.html.twig' %}

{% block title %}Article {{ article.titre }}{% endblock %}

{% block gauche %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-lg-2 mt-3 text-center">
            <div class="card mb-3" style="width: 18rem;">
                <div class="card-header">Cat√©gorie</div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-dark"><a href="{{ path('articles') }}" class="text-decoration-none">Tout les articles</a></li>
                        {% for categorie in categories %}
                            <li class="list-group-item list-group-item-dark"><a href="{{ path('categorie',{'slug':categorie.slug}) }}" class="text-decoration-none">{{ categorie.nom }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block body %}
        <div class="col-sm-12 col-lg-9 mx-auto">
            <div class="card mt-3">
                <div class="card-header text-center">
                    {{ article.titre }}
                </div>
                <div class="card-body">
                    {% if article.image %}
                        <img class="article card-img-top" src="{{ asset('uploads/images/products/' ~ article.image) }}"
                             alt="Card image cap">
                    {% endif %}

                    {% autoescape %}
                    <p class="card-text">{{ article.article|raw }}</p>
                    {% endautoescape %}
                    {% if article.lien %}
                        <a href="{{ article.lien }}" class="btn btn-primary" target="_blank">Voir le site</a>
                    {% endif %}
                </div>
                <div class="card-footer text-muted">
                    {{ article.date |date("d/m/Y") }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
